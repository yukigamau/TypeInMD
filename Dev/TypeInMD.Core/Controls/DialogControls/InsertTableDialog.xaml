<UserControl
    x:Class="TypeInMD.Core.Controls.InsertTableDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TypeInMD.Core.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:u="using:TypeInMD.Core.Utilities"
    Unloaded="OnUnloaded"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Spacing="8">
        <muxc:NumberBox Header="{u:LocaleString Key=Rows}" x:Name="rows" Value="4" Minimum="1" SpinButtonPlacementMode="Inline"/>
        <muxc:NumberBox Header="{u:LocaleString Key=Columns}" x:Name="columns" Value="3" Minimum="1" SpinButtonPlacementMode="Inline"/>
    </StackPanel>
</UserControl>
